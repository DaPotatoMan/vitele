{
   "compilerOptions": {
      "baseUrl": ".",
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "node",
      "incremental": false,
      "skipLibCheck": true,
      "strict": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,

      "lib": ["DOM", "ESNext"],
      "types": [
         "vite/client",
         "vite-plugin-pages/client",
         "vite-plugin-vue-layouts/client",
         "@types/node"
      ],
      "paths": {
         "~/*": ["src/render/*"],
         "@assets/*": ["src/render/assets/*"],
         "@styles/*": ["src/render/assets/styles/*"]
      }
   },
   "include": ["./**/*.ts", "**/*.js", "src/render/**/*.vue"],
   "exclude": ["dist", "node_modules", "src/main/*.js"]
}
