{
   "compilerOptions": {
      "baseUrl": ".",
      "target": "es2016",
      "module": "ESNext",
      "moduleResolution": "node",
      "incremental": false,
      "skipLibCheck": true,
      "strict": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,

      "lib": ["DOM", "ESNext"],
      "types": [
         "vite/client",
         "vite-plugin-pages/client",
         "vite-plugin-vue-layouts/client",
         "@types/node"
      ],
      "paths": {
         "~/*": ["src/*"],
         "@assets/*": ["src/assets/*"],
         "@styles/*": ["src/assets/styles/*"]
      }
   },
   "include": ["**/*.js", "**/*.ts", "src/**/*.vue", "types/*.d.ts"],
   "exclude": ["dist", "node_modules"]
}
