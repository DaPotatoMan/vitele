{
   "compilerOptions": {
      "baseUrl": ".",
      "target": "ESNext",
      "module": "ESNext",
      "strict": true,
      "strictNullChecks": true,
      "skipLibCheck": true,
      "incremental": false,
      "noUnusedLocals": true,
      "importHelpers": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
   },
   "include": [
      ".eslintrc.js",
      "./**/*.js",
      "./**/*.ts",
      "src/renderer/**/*.vue"
   ],
   "exclude": ["node_modules", "dist"]
}
