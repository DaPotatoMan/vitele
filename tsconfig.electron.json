{
   "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowJs": true,
      "outDir": "dist/main",

      "incremental": false,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true
   },
   "include": ["src/main/app.ts", "src/main/preload.js"]
}
